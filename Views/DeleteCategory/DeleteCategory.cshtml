@using DataLayer
@model Category
@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h2>حذف دسته‌بندی</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}

<div class="text-center">
    <h3>آیا از حذف این دسته‌بندی مطمئن هستید؟</h3>
    <p><strong>نام دسته‌بندی:</strong> @Model.Name</p>

	@if (ViewBag.ProdcutsInCategory != null && ((List<Perfume>)ViewBag.ProdcutsInCategory).Count > 0)
{
    <div class="alert alert-warning mt-3">
        <strong>توجه:</strong> این دسته‌بندی دارای محصولات زیر است و قابل حذف نیست.
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>تصویر</th>
                    <th>نام محصول</th>
                    <th>برند</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var perfume in (List<Perfume>)ViewBag.ProdcutsInCategory)
                {
                    <tr>
                        <td>
                            <img src="/ProductImages/@perfume.ImageName" alt="@perfume.Name" style="width: 100px; height: 100px; object-fit: cover;" />
                        </td>
                        <td>@perfume.Name</td>
                        <td>@perfume.Brand</td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="/Admin/Products/Delete/@perfume.Id" onclick="return confirm('آیا از حذف این محصول مطمئن هستید؟')">حذف محصول</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}



    else
    {
        <form action="@Url.Action("DeleteCategory", "DeleteCategory", new { id = Model.Id })" method="post" class="mt-3">
            <a class="btn btn-info" href="/Admin/categories">بازگشت به لیست</a>
            <input type="submit" class="btn btn-danger" value="حذف" />
        </form>
    }
</div>
