@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@using DataLayer;
@using ParyanPerfume.Dtos;
@model CategoriesDto;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Form</title>
</head>

 
<h2>ویرایش دسته‌بندی</h2>

<form asp-action="EditCategory" asp-controller="EditCategory" asp-route-id="@Model.CategoryId" method="post" enctype="multipart/form-data">

    <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
    <input type="hidden" name="ImageName" value="@Model.ImageName" />

    <div class="form-group">
        <label>نام دسته‌بندی</label>
        <input asp-for="CategoryName" class="form-control" />
    </div>

    <div class="form-group">
        <label>نام لاتین</label>
        <input asp-for="CategoryNickName" class="form-control" />
    </div>

    <div class="form-group">
        <label>توضیحات</label>
        <textarea asp-for="CategoryDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>تصویر فعلی</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageName))
        {
            <img src="/CategoryImages/@Model.ImageName" style="max-width:150px" />
        }
    </div>

    <div class="form-group">
        <label>تصویر جدید (در صورت نیاز)</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">ذخیره تغییرات</button>
    <a href="/admin/categories" class="btn btn-secondary">بازگشت</a>
</form>
